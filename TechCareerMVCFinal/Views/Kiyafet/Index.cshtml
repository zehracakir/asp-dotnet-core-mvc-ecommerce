@model List<Kiyafet>

<div class="container">
    <div class="row pt-3 pb-4">
        <div>
            <h1>Kıyafetler</h1>
        </div>
    </div>
    @if (TempData["basarili"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["basarili"]
        </div>
    }
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kıyafet Adı</th>
                <th>Fiyat</th>
                <th>Renk</th>
                <th>Cinsiyet</th>
                <th>Kıyafet Türü</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kiyafet in Model)
            {
                <tr>
                    <td>@kiyafet.Id</td>
                    <td>@kiyafet.KiyafetAdi</td>
                    <td>@kiyafet.Fiyati</td>
                    <td>@kiyafet.Rengi</td>
                    <td>@kiyafet.Cinsiyet</td>
                    <td></td>
                    <td>
                        <a asp-controller="Kiyafet" asp-action="KiyafetGuncelle" asp-route-id="@kiyafet.Id" type="button" class="btn btn-success" style="width:100px">Güncelle</a>
                    </td>
                    <td>
                        <button type="button" onclick="sil(@kiyafet.Id)" class="btn btn-danger" style="width:100px">Sil</button>
                        <form id="silForm_@kiyafet.Id" asp-controller="Kiyafet" asp-action="KiyafetSil" method="post">
                            <input type="hidden" name="id" value="@kiyafet.Id" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">  
        <div>
            <a asp-controller="Kiyafet" asp-action="KiyafetEkle" class="btn btn-lg btn-primary" type="button">Yeni Kıyafet Oluştur</a>
        </div>
    </div>
</div>
<script>
    function sil(id) {
        var onay = confirm("Bu kıyafeti silmek istediğinizden emin misiniz?");
        if (onay) {
            document.getElementById("silForm_" + id).submit();
        }
    }
</script>
