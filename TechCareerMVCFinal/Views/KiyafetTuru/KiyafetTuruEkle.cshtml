@model KiyafetTuru

<form method="post">
    <div class="container pt-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary" >Yeni Kıyafet Türü Ekle</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Ad" class="mb-2"></label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-lg btn-primary">Kıyafet Türü Ekle</button>
        <a asp-controller="KiyafetTuru" asp-action="Index" class="btn btn-lg btn-primary">Kıyafet Türlerine Geri Dön</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}